---
import Layout from "@layouts/Layout.astro";
import "../Minesweeper/style.scss";
---

<Layout
    title="Minesweeper"
    description="Minesweeper made in Vanilla JavaScript"
>
    <div id="xyzzy"></div>
    <div id="outer">
        <div id="wrapper">
            <div class="row">
                <div id="numBombs" class="item-container">000</div>
                <div class="item-container"><div id="smiley"></div></div>
                <div id="clock" class="item-container">000</div>
            </div>
            <div class="row">
                <div class="item-container">
                    <table id="minesweeper"></table>
                </div>
            </div>
            <div class="row">
                <div class="item-container">
                    <select id="size" class="extra-margin">
                        <option value="20" selected>Small</option>
                        <option value="30">Normal</option>
                        <option value="40">Big</option>
                    </select>
                </div>
                <div class="item-container">
                    <div class="flex-column-layout">
                        <div class="extra-margin">
                            <select id="difficulty" class="extra-margin">
                                <option value="BEGINNER">Beginner</option>
                                <option value="INTERMEDIATE" selected
                                    >Intermediate</option
                                >
                                <option value="EXPERT">Expert</option>
                            </select>
                        </div>
                        <div class="extra-margin">
                            Highscore: <span id="highscore">None yet!</span>
                        </div>
                    </div>
                </div>
                <div class="item-container">
                    <div class="flex-column-layout">
                        <div class="extra-margin">
                            <label
                                for="hints"
                                title="Hints act like normal tiles, but are helpful for some players"
                                >Hints (?):
                            </label>
                            <input id="hints" type="checkbox" />
                        </div>
                        <div class="extra-margin">
                            <label
                                for="oldfashioned"
                                title="Click tiles with flags with both buttons rather than just the left"
                                >Classic clicking:
                            </label>
                            <input id="oldfashioned" type="checkbox" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="../Minesweeper/script.js"></script>
</Layout>
